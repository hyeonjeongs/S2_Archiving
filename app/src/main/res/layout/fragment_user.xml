<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/userFragment"
    android:background="@drawable/background"
    tools:context="com.cookandroid.s2_archiving.fragment.UserFragment">

    <Button
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="LOGO"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/button_design"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <LinearLayout
        android:id="@+id/userimf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:weightSum="7"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/ivProf"
            android:layout_width="140dp"
            android:layout_height="120dp"

            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_weight="2"
            tools:layout_editor_absoluteX="140dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/applesdgothic_bold"
                android:text="hyeons"
                android:textSize="28dp" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/applesdgothic_regular"
                android:layout_marginTop="10dp"
                android:text="py0429@naver.com"
                android:textSize="18sp" />

        </LinearLayout>


            <Button
                android:id="@+id/btnChangeInfo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/applesdgothic_regular"
                android:background="@drawable/button_design"
                android:text="회원 정보 수정" />

            <Button
                android:id="@+id/btnDrop"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/applesdgothic_regular"
                android:background="@drawable/button_design"
                android:text="회원 탈퇴" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="로그 아웃"
                android:fontFamily="@font/applesdgothic_regular"
                android:background="@drawable/button_design"
                android:layout_marginBottom="20dp"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>