<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WriteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivWriteClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        <TextView
            android:id="@+id/tvWriteName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="조윤진"
            android:textColor="#000000"
            android:textSize="30sp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/tvWriteOk"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="등록"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/etWriteDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="날짜를 입력하세요(6자리 ex.220101)"
        android:background="@drawable/edge"
        android:inputType="textPersonName"
        android:padding="10dp"
         />

    <EditText
        android:id="@+id/etWriteName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="기념일 이름을 입력하세요"
        android:background="@drawable/edge"
        android:inputType="textPersonName"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivWriteCamera"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/camera"
            tools:srcCompat="@drawable/camera" />

        <TextView
            android:id="@+id/tvWriteImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="선물, 편지 등의 사진을 업로드 하세요"
            android:textSize="18sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/etWritePost"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:ems="10"
        android:hint="글쓰기"
        android:padding="10dp"
        android:background="@drawable/edge"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnWriteRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="게시글 등록" />
</LinearLayout>