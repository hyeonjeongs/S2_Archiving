<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cookandroid.s2_archiving.fragment.MydataEdit">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/csimf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">

        <Button
            android:id="@+id/btnEditMyDataback"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:backgroundTint="@color/black"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:ignore="MissingConstraints" />
        <Button
            android:id="@+id/btnEditEditMyData"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="완료"
            android:clickable="true"
            android:background="#DCDBDB"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/ivEditImageMydata"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_image"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/user" />
    <Button
        android:id="@+id/imageEditMyData"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ivEditImageMydata"
        android:background="@drawable/pencil"/>

    <LinearLayout
        android:id="@+id/ListMydataEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_alignParentBottom="true"
        android:padding="10dp"

        android:layout_below="@+id/imageEditMyData">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edge"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvEditNameMyData"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="닉네임"
                android:textColor="#000000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/etEditNameMyData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:ems="10"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/dupliCheckMyData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="중복확인"
                android:layout_marginStart="10dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edge"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvEditEmailMyData"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="이메일"
                android:textColor="#000000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/etEditPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:ellipsize="end"
                android:maxLines="1"
                android:hint="특수기호 없이 번호만 입력하세요"
                android:ems="10"
                android:inputType="textPersonName" />
            <TextView
                android:id="@+id/txEmailEditposMyData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수정불가"
                android:layout_marginEnd="10dp"
                android:textColor="#972D2D" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edge"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCurrentPwdMyData"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="현재 비밀번호"
                android:textColor="#000000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/etCurrentPwdMyData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:ems="10"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edge"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNewPwdMyData"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="새 비밀번호"
                android:textColor="#000000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/etNewPwdMyData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:ems="10"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edge"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvEditBirthMyData"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="10dp"
                android:text="생일"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/edit_year_spinner"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvEditBirthYear"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="년" />

            <Spinner
                android:id="@+id/edit_month_spinner"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvEditBirthMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="월" />

            <Spinner
                android:id="@+id/edit_day_spinner"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvEditBirthDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="일" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>