<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viewlistxml"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/edge_round_top"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/view_fav_friendImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/man" />

            <TextView
                android:id="@+id/view_fav_friendName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textColor="@color/black"
                android:textSize="18dp" />

        </LinearLayout>


        <Button
            android:id="@+id/viewfavmenubtn"
            android:layout_width="30dp"
            android:layout_height="7dp"
            android:layout_marginTop="30dp"
            android:layout_alignEnd="@id/linearLayout2"
            android:background="@drawable/menu_btn"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/view_fav_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edge"
        android:scaleType="fitXY"
        android:src="@drawable/food3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edge_round_bottom"
        android:orientation="vertical"
        android:padding="20dp">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/view_fav_heart"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="20dp"
                    app:srcCompat="@drawable/heart_full" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="#"
                            android:textColor="@color/dark"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/view_fav_date"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="20dp"
                            android:text="210324"
                            android:textColor="@color/dark"
                            android:textSize="15dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="#"
                            android:textColor="@color/dark"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/view_fav_special"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="생일"
                            android:textColor="@color/dark"
                            android:textSize="15dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        <TextView
            android:id="@+id/view_fav_story"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:paddingTop="5dp"
            android:text="story"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="15dp" />


    </LinearLayout>


</LinearLayout>